<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../partials/head', {role: role}) -%>
  </head>
  <body class="container">

    <header>
        <%- include('../partials/header', {role: role}) -%>
    </header>

    <main>
      <dir class="jumbotron">
        Журнал подій
      </dir>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Дата</th>
            <th scope="col">Користвач</th>
            <th scope="col">Дія</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event =>{%>
          <tr>
            <td><%= event.event_date %></td>
            <td><%= event.user.login" %></td>
            <td>
              Подія: <%= EventTypes[event.event_number] %><br>
              Джерело події: <%= event.row_affected %><br>
              Нове значення: <%= event.new_value %><br>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>

    <footer>
        <%- include('../partials/footer', {role}) -%>
    </footer>

  </body>
</html>